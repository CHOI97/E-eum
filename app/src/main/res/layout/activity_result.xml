<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:paddingLeft="100px"
        >
        <ImageView
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:background="@drawable/img_result"></ImageView>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:paddingTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:src="@drawable/img"
                ></ImageView>

            <TextView
                android:layout_width="350dp"
                android:layout_height="25dp"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:text="번역 결과"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#E9A2A2"
                ></TextView>
            <TextView
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:text="안녕하세요"
                android:textSize="20dp"
                android:textColor="#000000"
                ></TextView>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#C1BFBF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            app:itemIconSize="120px"
            android:layout_marginTop="10dp"
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            app:itemIconTint="@menu/menu_selector_color"
            app:itemTextColor="@menu/menu_selector_color"
            app:labelVisibilityMode="selected"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_menu"/>

    </LinearLayout>

</LinearLayout>